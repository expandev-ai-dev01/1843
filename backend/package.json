{
  "name": "safelogin-backend",
  "version": "1.0.0",
  "description": "Backend API for SafeLogin authentication system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "postinstall": "patch-package"
